               

jQuery(document).ready(function () {
    jQuery(document).on("click", '#add', function(){
        var content = $('.contents').val()
        $.ajax({
            type: "post", 
            url: "/todo/create",
            data: {todo:{content: content}},
            success: function(data, textStatus, jqXHR){   
                    $('.list_container').html(
                        data
                    )             
                    $('.contents').val('')
                }  
            ,
            error: function(jqXHR, textStatus, errorThrown){}
          })
    return false;
    })


    jQuery(document).on("change", '.checkbox', function(){
        todo_id = $(this).attr('id')
        $.ajax({
            type: "post", 
            url: "/todo/update",
            data: {todo:{id: todo_id}},
            success: function(data, textStatus, jqXHR){   
                $('.list_container').html(
                    data
                )       
                console.log('Heyu')
                }  
            ,
            error: function(jqXHR, textStatus, errorThrown){

            }
          })
    }) 
    jQuery(document).on("click", '.import_btn', function(){
        $('#file_input').fadeToggle();
        var text = $('.import_btn').text()
        if(text == 'Import'){
            $('.import_btn').delay('slow').text('Close')
        }
        else{
            $('.import_btn').delay('slow').text('Import')   
        }
        }) 
   
})
